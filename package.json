{
	"name": "mplstyle",
	"displayName": "mplstyle (Matplotlib)",
	"description": "Intellisense for .mplstyle and matplotlibrc files",
	"version": "1.8.5",
	"license": "MIT",
	"publisher": "yy0931",
	"icon": "matplotlib/logo.png",
	"repository": {
		"url": "https://github.com/yy0931/vscode-mplstyle",
		"type": "git"
	},
	"bugs": {
		"url": "https://github.com/yy0931/vscode-mplstyle/issues"
	},
	"keywords": [
		"matplotlib",
		"pyplot",
		"mplstyle",
		"rcParams",
		"python"
	],
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:mplstyle",
		"onLanguage:python",
		"onWebviewPanel:mplstylePreview"
	],
	"main": "./src/extension.js",
	"browser": "./browser/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "mplstyle",
				"extensions": [
					".mplstyle"
				],
				"filenames": [
					"matplotlibrc"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "mplstyle",
				"scopeName": "source.mplstyle",
				"embeddedLanguages": {
					"meta.embedded.line.python": "python"
				},
				"path": "./mplstyle.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "mplstyle",
			"properties": {
				"mplstyle.hover.matplotlibPath": {
					"type": "string",
					"default": "",
					"description": "The installation directory of matplotlib used to generate the documentation, e.g. /home/foo/.local/lib/python3.10/site-packages/matplotlib. The data shipped with the extension will be used if the value is an empty string."
				},
				"mplstyle.hover.showImages": {
					"type": "boolean",
					"default": true,
					"description": "Controls whether to show images in hover"
				},
				"mplstyle.preview.pythonPath": {
					"type": "string",
					"default": "",
					"description": "Path to the Python executable to display previews, e.g. /usr/bin/python3, defaults to the output of `which python3 || which py || which python` (Linux, Mac) or `where python3 || where py || where python` (Windows)"
				},
				"mplstyle.preview.activateOnSave": {
					"type": "boolean",
					"default": false,
					"description": "Controls whether to show the preview panel on save"
				},
				"mplstyle.preview.codeLens.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Controls whether to show a button to show previewer on the editor"
				},
				"mplstyle.preview.userPlots": {
					"type": "array",
					"default": [],
					"uniqueItems": true,
					"items": {
						"type": "string"
					},
					"markdownDescription": "Adds Python scripts that can be used in the previewer. Example: `[\"/home/foo/plot1.py\", \"/home/foo/plot2.py\"]`"
				},
				"mplstyle.completion.keywords.bool": {
					"type": "array",
					"items": {
						"type": "string",
						"minLength": 1
					},
					"uniqueItems": true,
					"default": ["t", "y", "yes", "on", "True", "1", "f", "n", "no", "off", "False", "0"]
				},
				"mplstyle.completion.keywords.none": {
					"type": "string",
					"default": "None",
					"minLength": 1
				}
			}
		},
		"commands": [
			{
				"title": "mplstyle: Preview",
				"command": "mplstyle.preview"
			}
		]
	},
	"capabilities": {
		"virtualWorkspaces": true,
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"scripts": {
		"webpack": "npx webpack",
		"prepare": "python3 scripts/generate_documentation_images.py && npm i @vscode/webview-ui-toolkit@0.8.2 --prefix webview-ui-toolkit && cp webview-ui-toolkit/node_modules/@vscode/webview-ui-toolkit/dist/toolkit.min.js src/preview/webview-ui-toolkit.min.js && rimraf webview-ui-toolkit",
		"vscode:prepublish": "npm run webpack && python3 scripts/generate_documentation_images.py",
		"test": "nyc mocha 'src/**/*.js' --exclude 'src/extension*.js' --exclude 'src/preview/*.js' --exclude 'src/logger.js'",
		"test-web": "npm run webpack && npx @vscode/test-web --extensionDevelopmentPath=."
	},
	"dependencies": {
		"@vscode/codicons": "^0.0.26",
		"json5": "^2.2.0",
		"tmp": "^0.2.1",
		"which": "^2.0.2"
	},
	"devDependencies": {
		"@types/chai": "^4.2.22",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.11.6",
		"@types/vscode": "^1.60.0",
		"@types/which": "^2.0.1",
		"@vscode/test-web": "^0.0.15",
		"chai": "^4.3.4",
		"mocha": "^9.1.3",
		"nyc": "^15.1.0",
		"rimraf": "^3.0.2",
		"terser-webpack-plugin": "^5.2.4",
		"webpack": "^5.62.1",
		"webpack-cli": "^4.9.1"
	}
}
