{
	"name": "mplstyle",
	"displayName": "mplstyle (Matplotlib)",
	"description": "Intellisense for .mplstyle and matplotlibrc files",
	"version": "1.3.1",
	"license": "MIT",
	"publisher": "yy0931",
	"icon": "matplotlib/logo.png",
	"repository": {
		"url": "https://github.com/yy0931/vscode-mplstyle",
		"type": "git"
	},
	"bugs": {
		"url": "https://github.com/yy0931/vscode-mplstyle/issues"
	},
	"keywords": [
		"matplotlib",
		"pyplot",
		"mplstyle"
	],
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:mplstyle"
	],
	"main": "./src/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "mplstyle",
				"extensions": [
					"matplotlibrc",
					".mplstyle"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "mplstyle",
				"scopeName": "source.mplstyle",
				"path": "./mplstyle.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "mplstyle",
			"properties": {
				"mplstyle.matplotlibPath": {
					"type": "string",
					"default": "",
					"description": "path of matplotlib, e.g. /home/foo/.local/lib/python3.10/site-packages/matplotlib"
				}
			}
		}
	},
	"scripts": {
		"test": "nyc mocha 'src/**/*.test.js'"
	},
	"dependencies": {
		"json5": "^2.2.0"
	},
	"devDependencies": {
		"chai": "^4.3.4",
		"mocha": "^9.1.3",
		"nyc": "^15.1.0"
	}
}
