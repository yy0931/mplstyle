{
	"name": "mplstyle",
	"displayName": "mplstyle (Matplotlib)",
	"description": "Intellisense for .mplstyle and matplotlibrc files",
	"version": "1.7.0",
	"license": "MIT",
	"publisher": "yy0931",
	"icon": "matplotlib/logo.png",
	"repository": {
		"url": "https://github.com/yy0931/vscode-mplstyle",
		"type": "git"
	},
	"bugs": {
		"url": "https://github.com/yy0931/vscode-mplstyle/issues"
	},
	"keywords": [
		"matplotlib",
		"pyplot",
		"mplstyle",
		"rcParams",
		"python"
	],
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:mplstyle",
		"onWebviewPanel:mplstylePreview"
	],
	"main": "./src/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "mplstyle",
				"extensions": [".mplstyle"],
				"filenames": ["matplotlibrc"],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "mplstyle",
				"scopeName": "source.mplstyle",
				"embeddedLanguages": {
					"meta.embedded.line.python": "python"
				},
				"path": "./mplstyle.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "mplstyle",
			"properties": {
				"mplstyle.matplotlibPath": {
					"type": "string",
					"default": "",
					"description": "path of matplotlib, e.g. /home/foo/.local/lib/python3.10/site-packages/matplotlib"
				},
				"mplstyle.showComparisonImage": {
					"type": "boolean",
					"default": true,
					"description": "Controls whether to show comparison images in the hover"
				}
			}
		},
		"commands": [
			{
				"title": "mplstyle: Preview",
				"command": "mplstyle.preview"
			}
		]
	},
	"capabilities": {
		"virtualWorkspaces": true,
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"scripts": {
		"vscode:prepublish": "python3 scripts/generate_example.py",
		"test": "nyc mocha 'src/**/*.js' --exclude 'src/extension.js'"
	},
	"dependencies": {
		"json5": "^2.2.0",
		"tmp": "^0.2.1",
		"which": "^2.0.2"
	},
	"devDependencies": {
		"chai": "^4.3.4",
		"mocha": "^9.1.3",
		"nyc": "^15.1.0"
	}
}
